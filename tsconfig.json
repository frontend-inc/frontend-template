{
	"compilerOptions": {
		"baseUrl": "src",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "Node16",		
    "moduleResolution": "node16",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/app/[app_id]/[page_id]", "src/index.js"],
	"exclude": ["node_modules"]
}
